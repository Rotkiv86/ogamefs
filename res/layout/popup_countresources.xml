<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_countresources"
	android:orientation="vertical"
	android:padding="10dip"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#FFFFFF">
	<TableRow>
		<ProgressBar
			android:id="@+id/progressbar_countresources"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_span="2"/>
	</TableRow>
	<TableRow>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			android:text="Available Resources:"
			android:layout_span="2"/>
	</TableRow>
	<TableRow>
		<TextView
			android:id="@+id/textview_iron_label"
			android:text="Iron:"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/textview_iron"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="right"/>
	</TableRow>
	<TableRow>
		<TextView
			android:id="@+id/textview_crystal_label"
			android:text="Chrystal:"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/textview_crystal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"/>
	</TableRow>
	<TableRow>
		<TextView
			android:id="@+id/textview_deuterium_label"
			android:text="Deuterium:"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/textview_deuterium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"/>
	</TableRow>
	<TableRow>
		<TextView
			android:id="@+id/textview_msg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Production(/h):"
			android:layout_span="2"/>
	</TableRow>
	<TableRow>
		<TextView
			android:id="@+id/textview_iron_production_label"
			android:text="Iron:"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/textview_iron_production"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"/>
	</TableRow>
	<TableRow>
		<TextView
			android:id="@+id/textview_crystal_production_label"
			android:text="Chrystal:"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/textview_crystal_production"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"/>
	</TableRow>
	<TableRow>
		<TextView
			android:id="@+id/textview_deuterium_production_label"
			android:text="Deuterium:"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/textview_deuterium_production"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"/>
	</TableRow>
</TableLayout>
